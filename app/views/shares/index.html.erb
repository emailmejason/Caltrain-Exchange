<h1>Listing shares</h1>

<table>
  <tr>
    <th>Trip</th>
    <th>Offer</th>
    <th>Wifi rating</th>
    <th>User rating</th>
    <th>Network name</th>
    <th>Network password</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shares.each do |share| %>
  <tr>
    <td><%= share.trip_id %></td>
    <td><%= share.offer_id %></td>
    <td><%= share.wifi_rating %></td>
    <td><%= share.user_rating %></td>
    <td><%= share.network_name %></td>
    <td><%= share.network_password %></td>
    <td><%= link_to 'Show', share %></td>
    <td><%= link_to 'Edit', edit_share_path(share) %></td>
    <td><%= link_to 'Destroy', share, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

